{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["clients", "dist"]
}
